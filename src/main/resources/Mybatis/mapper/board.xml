<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mybatis.mapper.board">
    <resultMap id="listResult" type="map">
        <result column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="title" property="title"/>
    </resultMap>

    <resultMap id="readResult" type="board">
        <result column="text" property="text"/>
    </resultMap>



    <insert id="postUserText" parameterType="WriteVO">
        INSERT INTO test_board(name, title, text) VALUES (#{name}, #{title}, #{text})
    </insert>

    <select id="getRead" parameterType="int" resultMap="readResult">
        SELECT text FROM test_board WHERE id = #{id}
    </select>

    <select id="getAllList" parameterType="int" resultMap="listResult">
        SELECT id, name, title FROM test_board LIMIT #{page}, 10
    </select>

    <select id="getFilteredList" parameterType="filterVO" resultType="board">
       SELECT id, name, title FROM test_board WHERE title LIKE  CONCAT('%',#{filter},'%') OR text LIKE  CONCAT('%',#{filter},'%') LIMIT #{page}, 10
    </select>
</mapper>
